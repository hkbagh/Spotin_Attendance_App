<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/employeeNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="14sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:text="Sanjay"/>

    <HorizontalScrollView
        android:id="@+id/dailyAttendanceScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/dailyStatusLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Day status (checkmark/cross) will be added programmatically here -->
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/totalPresentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:minWidth="60dp"
        android:textAlignment="center"
        tools:text="24"/>

    <TextView
        android:id="@+id/totalAbsentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:minWidth="60dp"
        android:textAlignment="center"
        tools:text="6"/>

</LinearLayout>
