<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EmployerDashboardActivity">

    <TextView
        android:id="@+id/employerWelcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Employer!"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <SearchView
        android:id="@+id/employeeSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search by Employee ID"
        android:iconifiedByDefault="false"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/presentEmployeesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present Employees Today:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/presentEmployeesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/employerLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"/>

</LinearLayout>
